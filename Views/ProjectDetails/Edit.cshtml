@model BaiLam.Models.ProjectDetail

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<body class="sb-nav-fixed">
    <div id="layoutSidenav">
        <div id="layoutSidenav_content">
            <div class="card-header">

                <h5>Edit User: @ViewBag.EmployeeName</h5>

            </div>
            <div class="card-body">
                <main>
                    <div class="row">
                        <div class="col"></div>
                        <div class="col-md-4">
                            <form asp-action="Edit">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="detailID" />
                                <div class="form-group">
                                    <label asp-for="ProjectID" class="control-label"></label>
                                    <select asp-for="ProjectID" class="form-control" asp-items="ViewBag.ProjectID"></select>
                                    <span asp-validation-for="ProjectID" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="EmployeeID" class="control-label"></label>
                                    <select asp-for="EmployeeID" class="form-control" asp-items="ViewBag.EmployeeID"></select>
                                    <span asp-validation-for="EmployeeID" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Description" class="control-label"></label>
                                    <input asp-for="Description" class="form-control" />
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Mon" class="control-label"></label>
                                    <input asp-for="Mon" class="price form-control" />
                                    <span asp-validation-for="Mon" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Tue" class="control-label"></label>
                                    <input asp-for="Tue" class="price form-control" />
                                    <span asp-validation-for="Tue" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Wed" class="control-label"></label>
                                    <input asp-for="Wed" class="price form-control" />
                                    <span asp-validation-for="Wed" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Thur" class="control-label"></label>
                                    <input asp-for="Thur" class="price form-control" />
                                    <span asp-validation-for="Thur" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Fri" class="control-label"></label>
                                    <input asp-for="Fri" class="price form-control" />
                                    <span asp-validation-for="Fri" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="HoursWorked" class="control-label"></label>
                                    <input asp-for="HoursWorked" class="finaltotal form-control" placeholder="Hours" readonly />
                                    <span asp-validation-for="HoursWorked" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Save" class="btn btn-primary" /> |
                                    <a class="btn btn-secondary" href="@ViewBag.returnUrl">Back to List</a>
                                </div>
                            </form>
                        </div>
                        <div class="col"></div>
                    </div>
                </main>
                <footer class="py-4 bg-light mt-auto">
                    <div class="container-fluid">
                        <div class="d-flex align-items-center justify-content-between small">
                            <div class="text-muted">Trần Tuấn Khải & Cao Minh Phát</div>
                            <div>
                                <a asp-action="Index">2020</a>
                                &middot;
                                <a asp-action="Index">2021</a>
                            </div>
                        </div>
                    </div>
                </footer>
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.3/jquery.min.js"></script>
    <script>
        $('.price').on('keyup', function () {
            var val = +$(this).val();
            var finaltotal = 0;
            $('.price').each(function () {
                if (!isNaN($(this).val()))
                    finaltotal += Number($(this).val());
            });
            $('.finaltotal').val(finaltotal);
        });

        $(document).ready(function () {
            $('.price').trigger('keyup');
        });
    </script>
</body>

