@model BaiLam.Models.ProjectDetail

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<body class="sb-nav-fixed">
    <div id="layoutSidenav">
        <div id="layoutSidenav_content">
            <main>
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-user mr-1"></i>
                        Assign employee
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col"></div>
                            <div class="col-md-4">
                                <form asp-action="Create">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        <label asp-for="ProjectID" class="control-label"></label>
                                        <select asp-for="ProjectID" class="form-control" asp-items="ViewBag.ProjectID"></select>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="EmployeeID" class="control-label"></label>
                                        <select asp-for="EmployeeID" class="form-control" asp-items="ViewBag.EmployeeID"></select>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Description" class="control-label"></label>
                                        <input asp-for="Description" class="form-control" />
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Mon" class="control-label"></label>
                                        <input asp-for="Mon" class="price form-control" value="0" placeholder="Hours" />

                                        <span asp-validation-for="Mon" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Tue" class="control-label"></label>
                                        <input asp-for="Tue" class="price form-control" value="0" placeholder="Hours" />

                                        <span asp-validation-for="Tue" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Wed" class="control-label"></label>
                                        <input asp-for="Wed" class="price form-control" value="0" placeholder="Hours" />

                                        <span asp-validation-for="Wed" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Thur" class="control-label"></label>
                                        <input asp-for="Thur" class="price form-control" value="0" placeholder="Hours" />

                                        <span asp-validation-for="Thur" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Fri" class="control-label"></label>
                                        <input asp-for="Fri" class="price form-control" value="0" placeholder="Hours" />

                                        <span asp-validation-for="Fri" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="HoursWorked" class="control-label"></label>
                                        <input asp-for="HoursWorked" class="finaltotal form-control" value="0" placeholder="Hours" readonly />
                                        <span asp-validation-for="HoursWorked" class=" text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="Create" class="btn btn-primary" /> |
                                        <a class="btn btn-secondary" href="@ViewBag.returnUrl">Back to List</a>
                                    </div>
                                </form>
                            </div>
                            <div class="col">

                            </div>
                        </div>
                    </div>
                </div>
            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Trần Tuấn Khải & Cao Minh Phát</div>
                        <div>
                            <a asp-action="Index">2020</a>
                            &middot;
                            <a asp-action="Index">2021</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.3/jquery.min.js"></script>
    <script>
        $('.price').on('keyup', function () {
            var val = +$(this).val();
            var finaltotal = 0;
            $('.price').each(function () {
                if (!isNaN($(this).val()))
                    finaltotal += Number($(this).val());
            });
            $('.finaltotal').val(finaltotal);
        });

        $(document).ready(function () {
            $('.price').trigger('keyup');
        });
    </script>
</body>

