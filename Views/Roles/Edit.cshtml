@model BaiLam.Models.Role

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<body class="sb-nav-fixed">
    <div id="layoutSidenav">
        <div id="layoutSidenav_content">
            <div class="card-header">

                <h5>Edit role: @Html.DisplayFor(Model => Model.RolesName)</h5>

            </div>
            <div class="card-body">
                <main>
                    <div class="row">
                        <div class="col"></div>
                        <div class="col-md-4">
                            <form asp-action="Edit">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="RolesID" />
                                <div class="form-group">
                                    <label asp-for="RolesName" class="control-label"></label>
                                    <input asp-for="RolesName" class="form-control" />
                                    <span asp-validation-for="RolesName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
                                </div>
                            </form>
                        </div>
                        <div class="col"></div>
                    </div>
                </main>
            </div>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Trần Tuấn Khải & Cao Minh Phát</div>
                        <div>
                            <a asp-action="Index">2020</a>
                            &middot;
                            <a asp-action="Index">2021</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
</body>

